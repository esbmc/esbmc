{
	__ESBMC_HIDE:
    while(n--)
        if(*s1++!=*s2++)
            return *(unsigned char*)(s1 - 1) - *(unsigned char*)(s2 - 1);
    return 0;
}
#endif

int strncmp(const char *s1, const char *s2, size_t n) {
int i;

for (i = 0; i < n; i++) {
if (s1[i] == s2[i]) {
if (s1[i] == '\0') return 0;
continue;
}
if (s1[i] == '\0') return -1;
if (s2[i] == '\0') return 1;
if (s1[i] < s2[i]) return -1;
else return 1;
}

return 0;
}

