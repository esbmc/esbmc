    } while (*dest++ = *src++);
    while (n--)
        *dest++ = 0;
    return ret;
}
#endif

char *strncpy(char *d, const char *s, size_t n) {
size_t i;

for (i = 0; s[i] != '\0' && i < n; i++) {
d[i] = s[i];
}
for (; i < n; i++) {
d[i] = '\0';
}

return d;
}

