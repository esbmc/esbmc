{
	__ESBMC_HIDE:
	const char *p = s;
	while (*s) ++s;
	return s - p;
}
#endif

size_t strlen(const char *s) {
size_t i;

for (i = 0; s[i]; i++);

return i;
}

size_t strspn_reverse(const char *s1, const char *s2)
{
    size_t ret=strlen(s1);
    while(*s1 && strchr(s2,*s1--))
        ret--;
    return ret;
}

