#ifndef STL_CSIGNAL
#define STL_CSIGNAL

#include "definitions.h"

typedef void (*sighandler)(int);

sighandler vetor[16];

void signal(int sig, sighandler func) {

	__ESBMC_assert( (sig == 2) || (sig == 6) || (sig == 8) || (sig == 4) ||
						 (sig == 11) || (sig == 15),
						 "Signal must be equal to defined at lib csignal");

	vetor[sig] = func;
}

int raise(int sig) {

	__ESBMC_assert( (sig == 2) || (sig == 6) || (sig == 8) || (sig == 4) ||
						 (sig == 11) || (sig == 15),
						 "Signal must be equal to defined at lib csignal");

	if (vetor[sig] != 0) {
		vetor[sig];
		return 0;	
	}
	
	return nondet_uint();
}

#endif
