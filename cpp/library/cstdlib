char get_char(int digit) {
	char charstr[]="0123456789ABCDEF";
	return charstr[digit];
}

void rev(char *p) {
	char *q=&p[strlen(p)-1];
	char *r=p;
	for(;q>r;q--,r++) {
		char s=*q;
		*q=*r;
		*r=s;
	}
}

