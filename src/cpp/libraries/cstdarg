#ifndef STL_CSTDARG
#define STL_CSTDARG

typedef int* va_list;

void va_end(va_list ap);

#ifndef _VA_ARG_DEFINED
#define va_arg(ap,t) t()
#endif

void va_start(va_list ap, ...);

int vsprintf(char * str, const char * format, va_list arg);

#endif
