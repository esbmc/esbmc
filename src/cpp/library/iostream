#ifndef STL_IOSTREAM
#define STL_IOSTREAM

#include "iomanip"
#include "definitions.h"
#include "istream"
#include "ostream"

namespace std
{
// Forward declaration of istream and ostream
class istream;
class ostream;

// Definition of iostream
class iostream : public ostream, public istream
{
public:
  // Default constructor
  iostream() : ostream(), istream()
  {
  }

  // Destructor
  virtual ~iostream()
  {
  }

  // Disabled copy assignment operator
  iostream &operator=(const iostream &);
};

// Declaration of standard input/output streams
extern istream cin;
extern ostream cout;
extern ostream cerr;

// Definition of standard end-of-line character
const char endl = '\n';
} // namespace std

#endif