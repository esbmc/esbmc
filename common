CFLAGS=	$(GCCFLAGS) $(INCLUDES)
CPLUSFLAGS= $(GCCFLAGS) $(INCLUDES)

.SUFFIXES:	.C .d .cpp

.C.o:
	$(CPLUS) -c $(CPLUSFLAGS) -o $@ $<

.cpp.o:
	$(CPLUS) -c $(CPLUSFLAGS) -o $@ $<

.c.o:
	$(CC) -c $(CFLAGS) -o $@ $<

